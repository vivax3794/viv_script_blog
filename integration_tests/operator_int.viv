${
    assert 1 + 1 == 2;
    assert 1 + 2 + 3 == 6;
    assert 2 * 3 + 4 == 10;
    assert 1 - 2 - 3 == -4; 
    
    # These are some strange edge cases!
    assert -5 + 2 == -3;
    assert -5 - 2 == -7;
    assert 5 + -3 == 2; 
    assert 3 - -2 == 5;
    assert 3 --- 2 == 1;
    assert 3 + 2 - 1 == 4;
    
    assert 4 * 6 / 2 == 12;
}